CREATE TABLE  edge(
        edge_name VARCHAR(50) NOT NULL PRIMARY KEY,
        ip_address VARCHAR(30) NOT NULL,
        type VARCHAR(50) NOT NULL,
        is_active BOOLEAN NOT NULL
      );
CREATE TABLE  intrusion(
        edge_name VARCHAR(50) NOT NULL,
        date_time timestamp NOT NULL,
        PRIMARY KEY(edge_name, date_time),
        FOREIGN KEY (edge_name) REFERENCES edge(edge_name)
      );

CREATE TABLE user1(
        username VARCHAR(50) NOT NULL PRIMARY KEY,
        password VARCHAR(100) NOT NULL,
        isAlarm BOOLEAN NOT NULL
      );
INSERT INTO edge(edge_name,ip_address,type,is_active) VALUES ('raspberryPi1','1.1.1.1','RaspberryPi',True);
INSERT INTO user1(username,password,isAlarm) VALUES ('user','password',True);
